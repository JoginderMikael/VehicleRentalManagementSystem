<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.1">

    <persistence-unit name="vehicle_rental">

        <class>git.joginder.mikael.entity.Customer</class>
        <class>git.joginder.mikael.entity.Vehicle</class>
        <class>git.joginder.mikael.entity.Rental</class>

        <properties>

            <!-- PostgreSQL JDBC -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/vehiclerental"/>
            <property name="jakarta.persistence.jdbc.driver"
                      value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.user"
                      value="joginder"/>
            <property name="jakarta.persistence.jdbc.password"
                      value="3625"/>

            <!-- Hibernate dialect -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Auto-create/update tables -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- Debug SQL -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

        </properties>
    </persistence-unit>
</persistence>
